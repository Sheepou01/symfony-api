{% extends 'base.html.twig' %}

{% block title %}Administration 5MAP{% endblock %}

{% block body %}
<h2 class="my-4">Administration des membres</h2>

<table class="table table-striped table-bordered table-md">
        <thead class="thead">
            <tr>
                <th>Id</th>
                <th>Nom d'utilisateur</th>
                <th>Email</th>
                <th>Rôle</th>
                <th>Crée le</th>
                <th>Mis à jour le</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.role.name }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('d-m-Y') : '' }}</td>
                <td>{{ user.updatedAt ? user.updatedAt|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}"><i class="fas fa-pencil-alt"></i> Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>


{% endblock %}
