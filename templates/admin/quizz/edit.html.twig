{% extends 'base.html.twig' %}

{% block title %}Editer un quizz{% endblock %}

{% block body %}
<h2 class="my-4">Editer un quizz</h2>

{{ include('admin/quizz/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
{{ include('admin/quizz/_delete_form.html.twig') }}

<h3 class="mt-5">Questions:</h3>
<ul class="list-group mb-4">
    {% for question in quizz.questions %}
    <li class="list-group-item"><a href="{{ path('admin_question_edit', {'quizz_id': quizz.id, 'question_id': question.id}) }}">{{ question.text }}</a></li>
    {% endfor %}
</ul>


{{ form_start(question_form, {'action': path('admin_question_new', {"id": quizz.id})}) }}
    {{ form_widget(question_form) }}
    <button class="btn btn-success">{{ button_label|default('Ajouter question') }}</button>
{{ form_end(question_form) }}


<a href="{{ path('admin_quizz_index') }}">Retour à la liste</a>
{% endblock %}
