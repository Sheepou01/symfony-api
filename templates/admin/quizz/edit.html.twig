{% extends 'base.html.twig' %}

{% block title %}Editer un quizz{% endblock %}

{% block body %}
<h1>Editer un quizz</h1>

{{ include('admin/quizz/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

<h2>Questions:</h2>
<ul>
    {% for question in quizz.questions %}
    <li><a href="{{ path('admin_question_edit', {'quizz_id': quizz.id, 'question_id': question.id}) }}">{{ question.text }}</a></li>
    {% endfor %}
</ul>

<a class="badge badge-success" href="{{ path('admin_question_new', {"id": quizz.id}) }}">Ajouter une question</a>

{{ include('admin/quizz/_delete_form.html.twig') }}

<a href="{{ path('admin_quizz_index') }}">Retour à la liste</a>
{% endblock %}
