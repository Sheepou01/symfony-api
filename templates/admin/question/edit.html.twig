{% extends 'base.html.twig' %}

{% block title %}Editer une question{% endblock %}

{% block body %}
<h1>Editer une question</h1>

{{ include('admin/question/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

<h2>Réponses possibles:</h2>
<ul>
    {% for answer in question.answers %}
    <li><a href="{{ path('admin_answer_edit', {'question_id': question.id, 'answer_id': answer.id}) }}">{{ answer.text }}</a></li>
    {% endfor %}
</ul>

<a class="badge badge-success" href="{{ path('admin_answer_new', {"id": question.id}) }}">Ajouter une réponse</a>

{{ include('admin/quizz/_delete_form.html.twig') }}

<a href="{{ path('admin_quizz_edit', {"id": question.quizz.id}) }}">Retour au quizz</a>
{% endblock %}
