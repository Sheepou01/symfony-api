{% extends 'base.html.twig' %}

{% block title %}Wiki index{% endblock %}

{% block body %}
    <h1>Wiki index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wiki in wikis %}
            <tr>
                <td>{{ wiki.id }}</td>
                <td>{{ wiki.name }}</td>
                <td>{{ wiki.createdAt ? wiki.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ wiki.updatedAt ? wiki.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('wiki_show', {'id': wiki.id}) }}">show</a>
                    <a href="{{ path('wiki_edit', {'id': wiki.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('wiki_new') }}">Create new</a>
{% endblock %}
